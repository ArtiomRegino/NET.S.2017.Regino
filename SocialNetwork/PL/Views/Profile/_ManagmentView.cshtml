@model List<PL.Models.Profile.ManagmentViewModel>

@{
    ViewBag.Title = "Managment";
}

@using (Html.BeginForm("ManageUsers", "Profile", FormMethod.Post))
{  
      <h3>Manage users</h3>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#">Management</a></li>
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Roles<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><button type="submit" name ="command" value="Active" class="btn btn-default btn-block text-center">Active</button></li>
                <li><button type="submit" name ="command" value="Banned" class="btn btn-default btn-block text-center">Banned</button></li>
                <li><button type="submit" name ="command" value="Moderator" class="btn btn-default btn-block text-center">Moderator</button></li>
            </ul>
        </li>
        <li><button type="submit" name ="command" value="Delete" style="margin-top: 2%" class="btn btn-default text-center">Delete</button></li>
    </ul>
    foreach (var item in Model)
    {
        <div class="row" style="margin-top: 2%">
            <input type="checkbox" name="Check" value="@item.Id"/>
            <div class="col-md-4">
                @item.Username
            </div>
        </div>
    }
}
