
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new Dictionary<string, object> { { "data-toggle", "validator" }, { "class", "col-md-8 col-sm-pull-2  col-md-offset-3" } }))
    {
        <h1>Lorem ipsum...</h1>
        <h4>Join our community or login now</h4>
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("UserName", "Username:")
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.TextBox("UserName", null, new {@class = "form-control", placeholder = "Username"})
            </div>
            @Html.ValidationMessage("UserName")
        </div>
        <div class="form-group">
            @Html.Label("Password", "Password:")
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-lock"></i>
                </span>
                @Html.TextBox("Password", null, new {@class = "form-control", type = "password", placeholder = "Password"})
            </div>
            @Html.ValidationMessage("Password")
        </div>

        <button type="submit" class="btn btn-success btn-default text-center">Sign In</button>

    }

