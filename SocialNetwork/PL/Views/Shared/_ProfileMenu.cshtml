@using PL.Providers


    @if (User.Identity.IsAuthenticated)
    {
    
        <div class="list-group text-left" style ="border: 0px">
           
            @Ajax.ActionLink(" Profile", "Index", "Profile", new AjaxOptions
       {
           UpdateTargetId = "main_container",
           InsertionMode = InsertionMode.Replace,
           LoadingElementId = "processing",
           AllowCache = false,
           OnBegin = "hideContent",
           OnComplete = "unhideContent"
       },
                new {@class = "list-group-item glyphicon glyphicon-user ", style = "border: 0px" })
                
            @Ajax.ActionLink(" Messages", "Index", "Profile", new AjaxOptions
       {
           UpdateTargetId = "main_container",
           InsertionMode = InsertionMode.Replace,
           LoadingElementId = "processing",
           AllowCache = false,
           OnBegin = "hideContent",
           OnComplete = "unhideContent"
       },
                new {@class = "list-group-item glyphicon glyphicon-user", style = "border: 0px" })

            @Ajax.ActionLink(" Friends", "Index", "Profile", new AjaxOptions
       {
           UpdateTargetId = "main_container",
           InsertionMode = InsertionMode.Replace,
           LoadingElementId = "processing",
           AllowCache = false,
           OnBegin = "hideContent",
           OnComplete = "unhideContent"
       },
                new {@class = "list-group-item glyphicon glyphicon-user", style = "border: 0px" })
            @Ajax.ActionLink(" Requests", "Index", "Profile", new AjaxOptions
       {
           UpdateTargetId = "main_container",
           InsertionMode = InsertionMode.Replace,
           LoadingElementId = "processing",
           AllowCache = false,
           OnBegin = "hideContent",
           OnComplete = "unhideContent"
       },
                new { @class = "list-group-item glyphicon glyphicon-user", style = "border: 0px" })
            
            @if((new CustomRoleProvider()).IsUserInRole(User.Identity.Name, "Admin"))
            {
                @Ajax.ActionLink(" Managment", "Index", "Profile", new AjaxOptions
                {
                    UpdateTargetId = "main_container",
                    InsertionMode = InsertionMode.Replace,
                    LoadingElementId = "processing",
                    AllowCache = false,
                    OnBegin = "hideContent",
                    OnComplete = "unhideContent"
                },
                    new {@class = "list-group-item glyphicon glyphicon-user", style = "border: 0px" })
                @Ajax.ActionLink(" Filters", "Index", "Profile", new AjaxOptions
           {
               UpdateTargetId = "main_container",
               InsertionMode = InsertionMode.Replace,
               LoadingElementId = "processing",
               AllowCache = false,
               OnBegin = "hideContent",
               OnComplete = "unhideContent"
           },
                    new { @class = "list-group-item glyphicon glyphicon-user", style = "border: 0px" })
            }
        </div>
        
    }

    <script>

        function hideContent() {
            $("#main_container").hide();
        };
        function unhideContent() {
            $("#main_container").show();
        };


    </script>
