<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <title>@ViewBag.Title FriendBar - Social Network</title>
    
   
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")   
    @Scripts.Render("~/bundles/unobtrusive-ajax")
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/css")
    
</head>
<body>  
@Html.Partial("_Header")
<div class="container" style="margin-top: 2%">
         
    <div class="col-xs-12 col-sm-9 col-md-10 col-lg-10 pull-right container">
        <div id="processing" style="display:none;">
            <h2>Processing...</h2>
        </div>

        <div id="main_container">
            @RenderBody()
        </div>
    </div>

    <div class="col-xs-12 col-sm-3 col-md-2 col-lg-2 text-center"> 
        @Html.Partial("_ProfileMenu")
    </div>

</div>
@RenderSection("scripts", required: false)
</body>

</html>

<script>

    function hideContent() {
        $("#main_container").hide();
    };
    function unhideContent() {
        $("#main_container").show();
    };

</script>